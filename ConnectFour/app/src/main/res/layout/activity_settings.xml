<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivities.SettingsActivity">

    <TextView
        android:id="@+id/settingsTitle"
        style="@style/AppTheme"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:background="@android:color/holo_orange_dark"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/settingsTitle"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/AppTheme"
        android:id="@+id/volumeSettings"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/volumeSettingsButton"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/graphicsSettingsButton" />

    <Button
        style="@style/AppTheme"
        android:id="@+id/graphicsSettingsButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/graphicsSettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>