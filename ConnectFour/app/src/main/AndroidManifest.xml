<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.connectfour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Board.VsAIGameBoard"></activity>
        <activity android:name=".SettingsActivities.SettingsActivity" />
        <activity android:name=".SettingsActivities.GraphicalSettings" />
        <activity
            android:name=".Board.VsPlayerGameBoard"
            android:exported="true" />
        <activity android:name=".SettingsActivities.PauseActivity" />
        <activity android:name=".NewGameActivity" />
        <activity
            android:name=".SettingsActivities.VolumeSettingsActivity"
            android:label="@string/title_activity_volume_settings" />
        <activity android:name=".StartScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>